<?xml version="1.0" encoding="UTF-8"?>
<opp:addPerson xmlns:opp="http://jboss.com/person/operations" xmlns:per="http://jboss.com/person" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.com/person/operations ../../main/resources/person-operations.xsd ">
  <opp:person>
    <per:id>${bigdata-index}</per:id>
    <per:name>
      <per:firstName>${bigdata-first-name}</per:firstName>
      <per:lastName>${bigdata-last-name}</per:lastName>
    </per:name>
    <per:address type="primary">
      <per:line>${bigdata-address-line-one}</per:line>
      <per:city>${bigdata-city}</per:city>
      <per:state>${bigdata-state}</per:state>
      <per:zip>${bigdata-zip-code}</per:zip>
    </per:address>
  </opp:person>
</opp:addPerson>
